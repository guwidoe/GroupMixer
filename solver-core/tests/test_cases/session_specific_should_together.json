{
  "name": "ShouldStayTogether session-specific",
  "input": {
    "problem": {
      "people": [
        { "id": "A", "attributes": {}, "sessions": [0,1] },
        { "id": "B", "attributes": {}, "sessions": [0,1] },
        { "id": "C", "attributes": {}, "sessions": [0,1] },
        { "id": "D", "attributes": {}, "sessions": [0,1] }
      ],
      "groups": [
        { "id": "G1", "size": 2 },
        { "id": "G2", "size": 2 }
      ],
      "num_sessions": 2
    },
    "objectives": [
      { "type": "maximize_unique_contacts", "weight": 1.0 }
    ],
    "constraints": [
      { "type": "ShouldStayTogether", "people": ["A", "B"], "penalty_weight": 300.0, "sessions": [1] }
    ],
    "solver": {
      "solver_type": "SimulatedAnnealing",
      "stop_conditions": { "max_iterations": 3000 },
      "solver_params": {
        "solver_type": "SimulatedAnnealing",
        "initial_temperature": 50.0,
        "final_temperature": 0.1,
        "cooling_schedule": "geometric"
      },
      "logging": {
        "log_frequency": 0,
        "display_final_schedule": false,
        "log_initial_score_breakdown": false,
        "log_final_score_breakdown": false,
        "log_stop_condition": false,
        "log_initial_state": false
      }
    }
  },
  "expected": {
    "should_stay_together_respected": true,
    "session_specific_constraints_respected": true
  }
}


